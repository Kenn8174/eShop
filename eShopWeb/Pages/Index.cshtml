@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    @foreach (var item in Model.Phone)
    {
        <div class="col-4">
            <div class="card border-dark mb-3">
                <div class="card-header"><h2>@item.Company.CompanyName</h2></div>
                <img class="card-img"/>
                <div class="card-body text-dark">
                    <h4>@item.PhoneName</h4>
                    <p class="font-weight-bold">$@item.Price</p>
                </div>
                <div class="card-footer border-dark bg-transparent">
                    <a asp-page="/Edit" asp-route-id="@item.PhoneID" class="btn btn-success">Redigere</a>
                    <a asp-page="/Delete" asp-route-id="@item.PhoneID" class="btn btn-danger">Slet</a>
                    <a class="btn btn-warning float-right">Tilføj</a>
                </div>
            </div>
        </div>
    }
</div>