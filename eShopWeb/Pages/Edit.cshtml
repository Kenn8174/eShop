@page "{id:int?}"
@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Redigere</h1>

<h4>Telefon</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Phone.PhoneID" />
            <div class="form-group">
                <label asp-for="Phone.Company.CompanyName" class="control-label"></label>
                <select asp-for="Phone.CompanyID" asp-items="Model.Firma" class="form-control col-6">
                    <option value="">All</option>
                </select>
                <span asp-validation-for="Phone.Company.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.PhoneName" class="control-label"></label>
                <input asp-for="Phone.PhoneName" class="form-control col-6" />
                <span asp-validation-for="Phone.PhoneName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.Price" class="control-label"></label>
                <input asp-for="Phone.Price" class="form-control col-6" />
                <span asp-validation-for="Phone.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.Photo.PhonePhoto" class="control-label"></label>
                <input asp-for="Phone.Photo.PhonePhoto" class="form-control col-6" />
                <span asp-validation-for="Phone.Photo.PhonePhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<partial name="_PartialForm" />


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@
}